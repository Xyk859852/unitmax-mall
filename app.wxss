}
.show{
  display:block;
  position:fixed;
  width:100%;
  background-color:rgba(0,0,0,0.5);
  height:100%; 
}
.hide{display:none;}
.no_data{
  margin-top: 80px;
  font-size: 14px;
  text-align: center;
}
.btn-hover{
  opacity: 1
}
button{
  background: none;
  border: none;  
  padding: 0;
  margin: 0;
  border-radius: 0;
}
button:after {
  border: none;
}
/* .input-placeholder{
