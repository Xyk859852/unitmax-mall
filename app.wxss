navigator{
  font-size: 0;
}
::-webkit-scrollbar { /*滚动条整体样式*/
	width: 1px; /*高宽分别对应横竖滚动条的尺寸*/
	height: 1px;
}

::-webkit-scrollbar-thumb { /*滚动条里面小方块*/
	border-radius: 1px;
	-webkit-box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.2);
	background: #dddddd;
}

::-webkit-scrollbar-track { /*滚动条里面轨道*/
	-webkit-box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.2);
	border-radius: 2px;
	background: #ffffff;
}
input::placeholder{
  color: #aaaaaa;
}
.small_btn,.small_btn2{
  padding: 0 15px;
  height: 25px;
  line-height: 25px;
  border-radius: 5px;
  text-align: center;
  margin-right: 4%;
  float: right;
  font-size: 14px;
  margin-top: 1px;
}
.small_btn{
  color: #333;
  border: #333 1px solid;
}
.small_btn2{
  color: #fe6500;
  border: #fe6500 1px solid;
}
/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 16px; /* 背景的宽 */
   height: 16px; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: #fe6500;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 16px;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 16px;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 16px;
   text-align: center;
   font-size:10px; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
