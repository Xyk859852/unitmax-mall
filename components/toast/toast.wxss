/* components/toast/toast.wxss */
.toast_content_box{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}
.toast_content{
  width: 50%;
  padding: 15px;
  background: rgba(0,0,0,0.8);
  border-radius: 5px;
}
.toast_content_text{
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}