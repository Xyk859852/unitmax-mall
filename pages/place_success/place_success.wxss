image{
  width: 60px;
  height: 60px;
  vertical-align: middle;
  margin-right: 10px;
}
.paysuccess{
  text-align: center;
  font-size: 24px;
  color: #1de510;
  padding-top: 40px;
  background-color: #ffffff;
  padding-bottom: 40px;
  border-bottom: #f5f5f5 solid 1px;
}
.detail{
  position: fixed;
  left: 10%;
  bottom: 40px;
  width: 80%;
  height: 40px;
  text-align: center;
  background-color: #fe6500;
  color: #ffffff;
  font-size: 16px;
  line-height: 40px;
  border-radius: 5px;
  margin: 0 auto;
}
.order_detail{
  background-color:#ffffff;
  line-height:40px;
  width:92%;
  padding:0 4%;
  font-size: 14px;
}
.order_detail view{
  border-bottom: #f5f5f5 solid 1px;
}
.order_detail text{
  float: right;
}