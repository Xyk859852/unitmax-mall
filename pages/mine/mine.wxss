/**mine.wxss**/
.container {
  height: 170px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-size:100% 100%;
  position: relative;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:20px;
}

.userinfo-avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
}

.userinfo-nickname {
  color: #fff;
  font-size: 16px;
  margin-top: 4px;
}
.refresh{
  position: absolute;
  right: 4%;
  top: 4%;
}
.refresh_img{
  width: 20px;
  height: 20px;
}
.mine_container{
  position:relative;
  padding:0 4%;
  background-color:#ffffff;
}
.mine_order_state{
  position:absolute;
  top:-50px;
  width:92%;
  overflow: hidden;
  background-color: #fff;
  border-radius: 5px;
	-webkit-box-shadow: 0 5px 8px #dddddd;
	-moz-box-shadow: 0 5px 8px #dddddd;
	box-shadow: 0 5px 8px #dddddd;
}
.mine_order_state_container{
  width:21%;
  float: left;
  padding: 20px 2%;
  position: relative;
}
.mine_order_state_container view{
  text-align:center;
  font-size: 16px;
}
.mine_order_state_container image{
  padding-top: 10px;
  width:40px;
  height:40px;
  margin:0 auto;
  display:block;
}
.mine_order_state_container .mine_order_state_img{
  width:30px;
  height:30px;
}
.mine_order{
  float: left;
  width: 100%;
  text-align: center;
  line-height: 40px;
  border-top: #efefef 1px solid;
  font-size: 14px;
  color: #666;
}
.mine_order image{
  width: 15px;
  height: 15px;
  vertical-align: middle;
  margin-top:-2px;
}
.mine_menu{
  overflow: hidden;
  padding-top: 98px;
}
.mine_menu .mine_order_state_container{
  border-bottom: #efefef 1px solid;
}
.no_border{
  border:none;
}
.mine_menu .mine_order_state_container image{
  padding: 0;
}
.mine_menu .mine_order_state_container view{
  padding-top:10px;
  font-size: 14px;
  line-height: 14px;
  color: #666;
}
.number{
  width: 16px;
  height: 16px;
  position: absolute;
  right: 15px;
  bottom: 35px;
  background-color: #fe6500;
  color: #ffffff;
  text-align: center;
  line-height: 16px;
  font-size: 8px!important;
  border-radius: 8px;
}
.copyright{
  text-align: center;
  background-color: #f5f5f5;
  line-height: 40px;
  font-size: 12px;
  color: #aaaaaa;
}