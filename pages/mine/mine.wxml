<!--mine.wxml-->
<import src="../../components/toast/toast.wxml"/>
<template is="toast" data="{{..._toast_}}"/>
<view class="container" style='background-image: url(../../images/1.png);'>
  <image class='refresh' src='../../images/refresh.png'/>
 <button class='userinfo' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">获取手机号</button>
  <view class="userinfo">
    <block >
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{nickName}}</text>
    </block>
  </view>
</view>
<view class='mine_container'>
  <view class='mine_order_state'>
    <navigator class='mine_order_state_container' url="../order_list/order_list">
      <view>待付款</view>
      <image src='../../images/category.png'></image>
    </navigator>
    <navigator class='mine_order_state_container' url="../order_list/order_list">
      <view>待接单</view>
      <image src='../../images/category.png'></image>
    </navigator>
    <navigator class='mine_order_state_container' url="../order_list/order_list">
      <view>进行中</view>
      <image src='../../images/category.png'></image>
    </navigator>
    <navigator class='mine_order_state_container' url="../order_list/order_list">
      <view>已完成</view>
      <image src='../../images/category.png'></image>
    </navigator>
    <navigator class='mine_order' url="../order_list/order_list">
        全部订单
      <image src='../../images/category.png'></image>
    </navigator>
  </view>
  <view class='mine_menu'>
    <navigator class='mine_order_state_container' url="../address_management/address_management">
      <image src='../../images/category.png'></image>
      <view>地址管理</view>
    </navigator>
    <navigator class='mine_order_state_container' url="../binding_phone/binding_phone">
      <image src='../../images/category.png'></image>
      <view>绑定手机</view>
    </navigator>
    <navigator class='mine_order_state_container' url="../order_detail/order_detail">
      <image src='../../images/category.png'></image>
      <view>订单详情</view>
    </navigator>
    <navigator class='mine_order_state_container' url="../advertising_detail/advertising_detail">
      <image src='../../images/category.png'></image>
      <view>广告详页</view>
    </navigator>
    <navigator class='mine_order_state_container' url="../post_evaluate/post_evaluate">
      <image src='../../images/category.png'></image>
      <view>发布评价</view>
    </navigator>
    <navigator class='mine_order_state_container' url="../about/about">
      <image src='../../images/category.png'></image>
      <view>关于我们</view>
    </navigator>
    <button bindtap='openToastPannel' class='mine_order_state_container'>
      <image src='../../images/category.png'></image>
      <view bindtap='openToastPannel'>测弹窗</view>
    </button> 
  </view>
</view>