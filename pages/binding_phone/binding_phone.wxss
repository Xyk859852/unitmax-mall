/* pages/binding_phone/binding_phone.wxss */
page{
  background-color: #ffffff;
}
.body{
  padding: 0 4%;
  font-size: 14px;
  margin-top: 40px;
}
.phone,.code{
  overflow: hidden;
  padding: 10px 0;
  border-bottom: #f5f5f5 1px solid;
}
.phone input,.phone text,.code input,.code text{
  float: left;
  line-height: 26px;
  padding: 5px 0;
}
.bingding{
  color: #fe6500;
  width: 130px;
  font-size: 14px;
  text-align: center;
}
.sendmsg{
  font-size: 14px;
  width: 130px;
  text-align: center;
  background-color: #fe6500;
  color: #ffffff;
  border-radius: 3px;
}
.sendmsgafter{
  font-size: 14px;
  width: 130px;
  text-align: center;
  background-color: #cccccc;
  color: #ffffff;
  border-radius: 3px;
}
.submit{
  border-radius: 5px;
  width:100%;
  font-size: 14px;
  margin-top: 40px;
  line-height: 40px;
  color: #ffffff;
  text-align: center;
  background-color: #fe6500;
}