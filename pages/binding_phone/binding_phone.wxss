/* pages/binding_phone/binding_phone.wxss */
page{
  background-color: #ffffff;
}
.body{
  padding: 0 4% 80px 4%;
  font-size: 14px;
}
.logo{
  padding: 40px 0;
  width: 150px;
  height: 150px;
  display: block;
  margin: 0 auto;
}
.phone,.code{
  overflow: hidden;
  padding: 10px 0;
}
.phone input,.code input{
  border-bottom: #f5f5f5 1px solid;
}
.phone input,.phone text,.code input,.code text{
  float: left;
   line-height: 1.4rem; 
  padding: 5px 0;
  height: 1.4rem;
  min-height:1.4rem;
}
.bingding{
  color: #fe6500;
  width: 130px;
  font-size: 14px;
  text-align: center;
}
.sendmsg{
  font-size: 14px;
  width: 128px;
  text-align: center;
  border: #fe6500 1px solid;
  color: #fe6500;
  border-radius: 5px;
  margin-left: 4%;
  float: right;
}
.sendmsgafter{
  font-size: 14px;
  width: 130px;
  text-align: center;
  background-color: #cccccc;
  color: #ffffff;
  border-radius: 5px;
}
.submit{
  border-radius: 5px;
  width:100%;
  font-size: 14px;
  margin-top: 30px;
  line-height: 40px;
  color: #ffffff;
  text-align: center;
  background-color: #fe6500;
}
.submitwechat{
  position: fixed;
  bottom: 53px;
  left: 4%;
  border-radius: 5px;
  width:92%;
  font-size: 14px;
  line-height: 40px;
  color: #fe6500;
  text-align: center;
  border: #fe6500 1px solid;
}
.submitwechat image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-top: -2px;
  margin-right: 5px;
}