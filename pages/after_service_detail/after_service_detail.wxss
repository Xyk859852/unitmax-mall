/* pages/after_service_detail/after_service_detail.wxss */
.commodity_li{
  width: 92%;
  overflow: hidden;
  padding:10px 4%;
  background-color: #ffffff;
  margin-bottom: 10px;
}
.deal{
  margin-bottom: 10px;
}
.commodity_li image{
  width: 60px;
  height: 60px;
  float: left;
}
.commodity_li_right{
  float: left;
  margin-left: 4%;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:10px;
  height: 27px;
  line-height: 27px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}
.after_service{
  margin-top: 10px;
}
.address_box{
  width: 100%;
  padding: 10px 0;
  background-color: #ffffff;
  overflow: hidden;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.address_left,.address_right{
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  margin-top: -10px;
}
.address_left{
  left:4%;
}
.address_right{
  right:4%;
}
.address{
  float: left;
  font-size: 14px;
}
.address_detail{
  font-size: 12px;
  color: #cccccc;
}
.other{
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
  font-size: 14px;
  padding:10px 4%;
  width: 92%;
}
.other_right,.other_input{
  float: right;
}
.explain{
  padding: 5px 0;
}
.image_box{
  margin-top: 10px;
}
.image_box > image{
 width: 32%;
 margin-left: 1%;
 position: relative;
}
.del{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 0;
  right: 0;
}