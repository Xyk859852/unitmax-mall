/* pages/order_list/order_list.wxss */
.nav{width:100%;height:40px;display:flex;flex-direction:row;background-color: #ffffff;font-size: 16px;}
.default{
  line-height:40px;text-align:center;flex:1;color:#000;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-bottom:1px solid #ff6692;
  }
.other image{
  width: 20px;
  height: 20px;
  margin-right: 4%;
  vertical-align: middle;
}
.other{
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
  font-size: 14px;
  padding:10px 4%;
  width: 92%;
}
.other label{
  font-size: 14px;
}
.order_state{
  float: right;
  color: #fe6500;
}
.commodity_list{
  margin-top: 10px;
}
.commodity_li{
  width: 92%;
  overflow: hidden;
  height: 80px;
  padding:10px 4%;
  background-color: #fafafa;
  border-bottom: #ffffff solid 2px;
}
.commodity_li image{
  width: 80px;
  height: 80px;
  float: left;
}
.commodity_li_right{
  height: 80px;
  float: left;
  margin-left: 4%;
  border-bottom: 1px solid #f5f5f5;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:10px;
  height: 27px;
  line-height: 27px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}
.num_box{
  float: right;
}
.order_total_money{
  padding: 10px 4%;
  background-color: #ffffff;
  text-align: right;
  font-size: 12px;
}
.order_btn{
  height: 30px;
  background-color: #ffffff;
  overflow: hidden;
  width: 100%;
  padding: 5px 0;
  border-top: 1px solid #f5f5f5;
}
.small_btn,.small_btn2{
  width: 70px;
  height: 25px;
  line-height: 25px;
  border-radius: 5px;
  text-align: center;
  margin-right: 4%;
  float: right;
  font-size: 12px;
}
.small_btn{
  color: #333;
  border: #333 1px solid;
}
.small_btn2{
  color: #fe6500;
  border: #fe6500 1px solid;
}