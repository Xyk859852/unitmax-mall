/* pages/usercenter/usercenter.wxss */
page{
  padding-bottom: 110px;
}
.usercenter{
  margin-top: 10px;
  background-color: #ffffff;
}
.usercenter view{
  padding: 10px 4%;
  border-bottom: 1px #f5f5f5 solid;
  font-size: 16px;
  overflow: hidden;
}
.head_img{
  line-height: 50px;
}
.usercenter image{
  width: 50px;
  height: 50px;
  float: right;
}
.usercenter input{
  width: 100px;
  float: right;
  color: #aaaaaa;
  text-align: right;
}
.btn_box1{
  width: 92%;
  padding: 10px 4%;
  margin-top: 20px;
}
.btn_box{
  width: 92%;
  position: fixed;
  bottom: 43px;
  left: 0;
  padding: 10px 4%;
}
.btn_box1 button{
  background-color: #fe6500;
  color: #ffffff;
  font-size: 14px;
  line-height: 40px;
  height: 40px;
}
.btn_box button{
  border: #fe6500 1px solid;
  color: #fe6500;
  font-size: 14px;
  line-height: 40px;
  height: 40px;
}