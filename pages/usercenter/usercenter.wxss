/* pages/usercenter/usercenter.wxss */
page{
  padding-bottom: 110px;
}
.nickname_popup {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
}

.nickname {
  width: 80%;
  height: 150px;
  position: fixed;
  top: 50%;
  margin-top: -100px;
  left: 10%;
  background-color: #fff;
  border-radius: 5px;
  overflow: hidden;
}

.nickname_popup image {
  width: 40px;
  height: 40px;
  position: fixed;
  top: 50%;
  margin-top: 80px;
  left: 50%;
  margin-left: -20px;
}

.nickname_title {
  background-color: #ff6692;
  color: #fff;
  text-align: center;
  line-height: 30px;
  font-size: 16px;
}

.nickname_content {
  padding: 20px 4%;
  font-size: 14px;
  height: 80px;
}

.nickname_content view {
  height: 80px;
  line-height: 20px;
  /* overflow-y: auto; */
}
.nickname_content input{
  width: 100%;
  color: #333;
  text-align: center;
}
.updateNickName{
  width: 48%;
  line-height: 40px;
  color: #fff;
  border-radius: 5px;
  background-color: #ff6692;
  font-size: 14px;
  margin-top: 20px;
  float:left;
}
.usercenter{
  margin-top: 10px;
  background-color: #ffffff;
}
.usercenter view{
  padding: 10px 4%;
  border-bottom: 1px #f5f5f5 solid;
  font-size: 16px;
  overflow: hidden;
  position: relative;
}
.head_img{
  line-height: 50px;
}
.usercenter image{
  width: 50px;
  height: 50px;
  float: right;
  border-radius: 25px;
}

.btn_box1{
  width: 92%;
  padding: 10px 4%;
  margin-top: 20px;
}
.btn_box{
  width: 92%;
  position: fixed;
  bottom: 43px;
  left: 0;
  padding: 10px 4%;
}
.btn_box1 button{
  background-color: #fe6500;
  color: #ffffff;
  font-size: 14px;
  line-height: 40px;
  height: 40px;
  border-radius: 5px;
}
.btn_box button{
  border: #fe6500 1px solid;
  color: #fe6500;
  font-size: 14px;
  line-height: 40px;
  height: 40px;
  border-radius: 5px;
}
.refresh_img{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-top: -2px;
  margin-right: 5px;
}
.usercenter .img2{
  width:20px;
  height: 20px;
  position: absolute;
  right: 4%;
  top: 50%;
  margin-top: -10px;
}