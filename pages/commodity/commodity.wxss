 #search image{
  width: 15px;
  height: 15px;
  vertical-align: middle;
  margin-top: -3px;
  margin-right: 5px;
} 
#search_box{
   position:fixed;
  top:0;
  left: 0; 
  width:92%;
  background-color:rgba(255,255,255,1);
  padding:5px 4% 7px 4%;
  z-index:1;
}
#search{
  text-align: center;
  width:92%;
  background-color:#f5f5f5;
  margin: 0 auto;
  border-radius: 5px;
  padding: 5px 4%;
  line-height: 22px;
  height: 20px;
  font-size: 14px;
  color: #aaaaaa;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.body{
  position: fixed;
  width: 100%;
  z-index: 99;
  height: 50px;
  background-color: #f5f5f5;
  top: 42px;
  left: 0;
}
.commodity_list{
  background-color: #ffffff;
  width: 92%;
  padding: 0 4%;
  margin-top: 92px;
}
.commodity_li{
  padding: 10px 0;
  overflow: hidden;
  width: 100%;
  height: 100px;
}
.commodity_li image{
  width: 100px;
  height: 100px;
  float: left;
}
.commodity_li_right{
  height: 99px;
  width: 50%;
  float: left;
  margin-left: 4%;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom:10px;
}
.commodity_li_title{
  font-size: 14px;
  height: 40px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:15px;
  font-weight: bold;
}
.commodity_li_tip{
  font-size: 12px;
  color: #aaaaaa;
  margin-top: 10px;
}
.commodity_li_price text{
  font-weight: normal;
  padding: 0 5px;
  text-align: center;
  color: #fe6500;
  font-size: 12px;
  border: #fe6500 1px solid;
  border-radius: 5px;
  margin-left: 4%;
}
.nav{width:100%;height:40px;display:flex;flex-direction:row;background-color: #ffffff;font-size: 14px;}
.nav image{
  width: 10px;
  height: 10px;
  vertical-align: middle;
  margin-left: 5px;
  margin-top: -3px;
}
.default{
  line-height:40px;text-align:center;flex:1;color:#666;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-bottom:1px solid #ff6692;
  }
  .show{
    z-index:99
  }
.show > view,.hide > view{
  padding:0 4%;
  font-size: 14px;
  line-height: 40px;
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
}
.detail_img{width: 100%;}
.specification_box{
  background-color: #ffffff;
  padding: 20px 4%;
}
.filtrate{
  width:60%;
  float:right;
  height:100%;
  overflow-y: auto;
  padding-bottom: 50px;
}
.filtrate .title{
  font-size: 14px;
}
.filtrate_btn{
  position: fixed;
  bottom: 10px;
  right: 0;
  width: 60%;
  padding: 0 4%;
  overflow: hidden;
}
.filtrate_btn button{
  width: 40%;
  margin: 0 5%;
  float: left;
  color: #ffffff;
  background-color: #fe6500;
  font-size: 14px;
  line-height: 30px;
}
.content{
  overflow: hidden;
}
.content view{
background-color:#f5f5f5;
text-align:center;
border-radius:5px;
margin:2%;
float:left;
line-height:20px;
font-size:12px;
padding:5px 10px;
}
.no_data{
  margin-top: 30%;
  text-align:center; 
}
.selected{
  background-color:#fe6500!important;
  color: #ffffff;
}