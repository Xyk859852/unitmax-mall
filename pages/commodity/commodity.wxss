/**commodity.wxss**/  

.commodity_list{
  background-color: #ffffff;
  width: 100%;
  padding: 0 4%;
  margin-top: 10px;
}
.commodity_li{
  padding-top: 10px;
  overflow: hidden;
  width: 92%;
  height: 100px;
}
.commodity_li image{
  width: 100px;
  height: 100px;
  float: left;
}
.commodity_li_right{
  height: 99px;
  width: 50%;
  float: left;
  margin-left: 4%;
  border-bottom: 1px solid #f5f5f5;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:15px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}
.nav{width:100%;height:40px;display:flex;flex-direction:row;background-color: #ffffff;font-size: 16px;}
.default{
  line-height:40px;text-align:center;flex:1;border-right:1px solid #f5f5f5;color:#000;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-right:1px solid #f5f5f5;border-bottom:1px solid #ff6692;
  }
.show{display:block;
 position:fixed;
width:100%;
background-color:rgba(0,0,0,0.5);
height:100%; 
}
.show view,.hidden view{
  padding:0 4%;
  font-size: 14px;
  line-height: 40px;
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
}
.hidden{display:none;}
.detail_img{width: 100%;}
.specification_box{
  background-color: #ffffff;
  padding: 20px 4%;
}