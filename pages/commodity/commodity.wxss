/**commodity.wxss**/  
.search_box{
  padding: 10px 4%;
  overflow: hidden;
  width: 92%;
}
.search_box_left{
  height: 30px;
  overflow: hidden;
  background-color: #ffffff;
  float: left;
  border-radius: 20px;
  padding: 0 2%;
}
.search_box_left image{
  width: 20px;
  height: 20px;
  float: left;
  margin-top: 5px;
}
 #search{
   padding:2px 0;
   margin-left: 2%;
   float: left;
   font-size: 16px;
} 
.show1{
  
}
.commodity_list{
  background-color: #ffffff;
  width: 100%;
  padding: 0 4%;
  margin-top: 10px;
}
.commodity_li{
  padding-top: 10px;
  overflow: hidden;
  width: 92%;
  height: 100px;
}
.commodity_li image{
  width: 100px;
  height: 100px;
  float: left;
}
.commodity_li_right{
  height: 99px;
  width: 50%;
  float: left;
  margin-left: 4%;
  border-bottom: 1px solid #f5f5f5;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:15px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}
.nav{width:100%;height:40px;display:flex;flex-direction:row;background-color: #ffffff;font-size: 16px;}
.default{
  line-height:40px;text-align:center;flex:1;color:#000;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-bottom:1px solid #ff6692;
  }
  .show{
    z-index:99
  }
.show > view,.hide > view{
  padding:0 4%;
  font-size: 14px;
  line-height: 40px;
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
}
.detail_img{width: 100%;}
.specification_box{
  background-color: #ffffff;
  padding: 20px 4%;
}
.filtrate{
  width:60%;
  float:right;
  height:100%;
  overflow-y: auto;
  padding-bottom: 50px;
}
.filtrate .title{
  font-size: 14px;
}
.filtrate_btn{
  position: fixed;
  bottom: 10px;
  right: 0;
  width: 60%;
  padding: 0 4%;
  overflow: hidden;
}
.filtrate_btn button{
  width: 40%;
  margin: 0 5%;
  float: left;
  color: #ffffff;
  background-color: #fe6500;
  font-size: 14px;
  line-height: 30px;
}
.content{
  overflow: hidden;
}
.content view{
background-color:#f5f5f5;
text-align:center;
border-radius:5px;
margin:2%;
float:left;
line-height:20px;
font-size:12px;
padding:5px 10px;
}
.no_data{
  margin-top: 30%;
  text-align:center; 
}