/* pages/amap_address/amap_address.wxss */
.section{
  height: 30px;
  width: 92%;
  background-color: #fe6500;
  padding:10px 4%;
}
.section input{
  width:92%;
  font-size: 14px;
  border-radius: 5px;
  padding: 4px 4%;
  background-color: #f5f5f5;
}
.title{
  padding: 10px 4%;
  font-size: 14px;
}
.address{
  background-color: #ffffff;
  padding: 10px 4%;
  position: relative;
}
.address view{
  font-size: 16px;
  color: #fe6500;
}
.address image{
  width: 30px;
  height: 30px;
  position: absolute;
  right: 4%;
  top: 50%;
  margin-top: -15px;
}
.text_box{
  background-color: #ffffff;
  padding: 10px 4%;
  font-size: 16px;
  border-bottom: #f5f5f5 1px solid;
}
.text_box view{
  font-size: 14px;
  color: #aaaaaa;
}