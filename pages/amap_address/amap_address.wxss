/* pages/amap_address/amap_address.wxss */
.section{
  width:92%;
  background-color:rgba(255,255,255,1);
  padding:5px 4% 7px 4%;
}
.section input{
  width:92%;
  background-color:#f5f5f5;
  margin: 0 auto;
  border-radius: 5px;
  padding: 5px 4%;
  line-height: 20px;
  height: 20px;
  font-size: 14px;
  color: #aaaaaa;
}
.title{
  padding: 10px 4%;
  font-size: 12px;
  color: #666;
  background-color: #f9f9f9;
}
.address{
  background-color: #ffffff;
  padding: 10px 4%;
  position: relative;
}
.address view{
  font-size: 16px;
  color: #fe6500;
}
.address image{
  width: 30px;
  height: 30px;
  position: absolute;
  right: 4%;
  top: 50%;
  margin-top: -15px;
}
.text_box{
  background-color: #ffffff;
  padding: 10px 4%;
  font-size: 16px;
  border-bottom: #f5f5f5 1px solid;
}
.text_box view{
  font-size: 12px;
  color: #aaaaaa;
}