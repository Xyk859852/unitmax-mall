/* pages/address_management/address_management.wxss */
.address_border{
  height: 3px;
}
.body{
  padding: 0 4% 60px 4%;
}
.address_box{
  margin-top: 10px;
  width: 100%;
  background-color: #ffffff;
  overflow: hidden;
  position: relative;
}
.address label{
  float: right;
}
.address{
  font-size: 14px;
  padding: 20px 4%;
  border-bottom: #f5f5f5 1px solid;
}
.address text{
  padding: 0 5px;
  text-align: center;
  color: #fe6500;
  font-size: 12px;
  border: #fe6500 1px solid;
  border-radius: 5px;
  margin-left: 4%;
  margin-right: 4%;
}
.address_detail{
  margin-top: 5px;
  color: #aaaaaa;
  font-size: 12px;
}
.btn_box{
  padding: 5px 0;
  overflow: hidden;
}
.btn_box radio{
  margin-left: 4%;
}
.btn_box label{
  font-size: 14px;
}
.small_btn{
  width: 50px;
  height: 20px;
  line-height: 20px;
  border-radius: 5px;
  text-align: center;
  margin-right: 4%;
  float: right;
  font-size: 14px;
  color: #333;
  border: #333 1px solid;
  margin-top: 3px;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 92%;
  z-index: 10;
  padding: 10px 4%;
  background-color: #ffffff;
  border-top: #f5f5f5 1px solid;
}
.footer button{
  font-size: 16px;
  width: 100%;
  line-height: 40px;
  /* background-color: #fe6500; */
  text-align: center;
  border-radius: 5px;
  color: #fe6500;
}
.footer button image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-top: -2px;
  margin-right: 5px;
}