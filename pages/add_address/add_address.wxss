/* pages/add_address/add_address.wxss */
page{
  padding-bottom: 60px;
}
.body{
  padding: 0 4%;
  background-color: #ffffff;
}
.body input{
  width: 100%;
  border-bottom:1px solid #f5f5f5;
  font-size: 14px;
  padding: 10px 0;
}
.default{
  font-size: 14px;
  padding: 10px 0;
  text-align: center;
}
.default label{
  margin-left: 5px;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 92%;
  z-index: 10;
  padding: 10px 4%;
}
.footer button{
  width: 100%;
  line-height: 40px;
  background-color: #fe6500;
  text-align: center;
  border-radius: 5px;
  color: #ffffff;
}