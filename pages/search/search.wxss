page{
  background-color:#ffffff;
}
.search_box{
  padding: 10px 4%;
  overflow: hidden;
  width: 92%;
  position: relative;
}
.search_box_left{
  height: 30px;
  overflow: hidden;
  background-color: #f5f5f5;
  float: left;
  border-radius: 5px;
  padding: 0 4%;
  /* position: relative; */
}
.search_box image{
  width: 15px;
  height: 15px;
  /* float: left */
  /* margin-top: 8px; */
  position: absolute;
  top: 50%;
  margin-top: -7px;
  /* left: 8%; */
}
 #search{
   /* padding: 5px 0; */
   /* margin-left: 4%; */
   float: left;
   line-height: 30px;
   font-size: 14px;
   height: 30px;
} 
#search_box_close{
  width: 32px;
  font-size: 14px;
  float: left;
  margin-left: 4%; 
  line-height: 30px;
}
.search_history,.search_hot{
  overflow: hidden;
  width: 100%;
}
.search_title{
  line-height: 40px;
  font-size: 14px;
  color: #666;
  padding: 0 4%;
}
.search_delete{
  width: 15px;
  height: 15px;
  margin-top: 12px;
  float: right;
}
.search_container{
  width: 96%;
  padding: 10px 4% 10px 0;
  overflow: hidden
}
.search_container_li{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  /* width:15.8%; */
  max-width: 140px;
  float:left;
  margin:5px 0 0 4%;
  padding: 0 10px;
  height: 25px;
  font-size: 12px;
  background-color: #f5f5f5;
  text-align: center;
  border-radius: 5px;
  line-height: 25px;
}