page{
  background-color:#ffffff;
  padding: 0 4%;
}
.search_box{
  padding: 10px 0;
  overflow: hidden;
  width: 92%;
}
.search_box_left{
  height: 40px;
  overflow: hidden;
  background-color: #f5f5f5;
  float: left;
  border-radius: 20px;
  padding: 0 2%;
}
.search_box_left image{
  width: 20px;
  height: 20px;
  float: left;
  margin-top: 10px;
}
 #search{
   padding: 8px 0;
   margin-left: 2%;
   float: left;
   line-height: 20px;
   font-size: 16px;
} 
#search_box_close{
  width: 32px;
  font-size: 16px;
  float: left;
  margin-left: 4%; 
  line-height: 40px;
}
.search_history,.search_hot{
  overflow: hidden;
  width: 92%;
}
.search_title{
  line-height: 40px;
  font-size: 16px;
}
.search_delete{
  width: 20px;
  height: 20px;
  margin-top: 10px;
  float: right;
}
.search_container{
  width: 100%;
  padding: 10px 0 20px 0;
  overflow: hidden
}
.search_container_li{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  width:15.8%;
  float:left;
  margin:10px 1% 0 1%;
  padding: 0 1%;
  height: 28px;
  font-size: 12px;
  background-color: #f5f5f5;
  text-align: center;
  border-radius: 10px;
  line-height: 28px;
}