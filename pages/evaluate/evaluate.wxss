/* pages/evaluate/evaluate.wxss */
.nav{width:100%;height:40px;display:flex;flex-direction:row;background-color: #ffffff;font-size: 16px;}
.default{
  line-height:40px;text-align:center;flex:1;color:#000;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-bottom:1px solid #ff6692;
  }
.evaluate_list{
  margin-top: 10px;
}
.evaluate{
  background-color: #ffffff;
  padding: 10px 4%;
  border-bottom: #f5f5f5 1px solid;
  overflow: hidden;
  border-radius: 5px;
}
.evaluate_nickname{
  font-size: 14px;
  color: #aaaaaa;
}
.evaluate_nickname text{
  float: right;
  font-size: 12px;
  margin-top: 2px;
}
.evaluate_container{
  font-size: 16px;
  margin-top: 5px;
}
.evaluate_img_box{
  overflow: hidden;
}
.evaluate_img_box image{
  width: 29.2%;
  margin: 2%;
  float: left;
}
.evaluate image{
  width: 30px;
  height: 30px;
  float: left;
  border-radius: 15px;
}
.evaluate_right{
  float: left;
  margin-left: 4%;
}