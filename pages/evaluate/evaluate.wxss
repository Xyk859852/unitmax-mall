/* pages/evaluate/evaluate.wxss */
.nav{width:100%;height:40px;display:flex;flex-direction:row;background-color: #ffffff;font-size: 14px;}
.default{
  line-height:40px;text-align:center;flex:1;color:#666;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-bottom:1px solid #ff6692;
  }
.evaluate_list{
  margin-top: 10px;
}
.evaluate {
  background-color: #fff;
  padding: 10px 4%;
  border-bottom: #f5f5f5 1px solid;
  overflow: hidden;
}

.evaluate_nickname {
  font-size: 14px;
  color: #aaa;
}

.evaluate_nickname text {
  float: right;
  font-size: 12px;
  margin-top: 2px;
}

.evaluate_container {
  width: 100%;
  font-size: 14px;
  color: #333;
  padding-top: 10px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.evaluate_img_box{
  overflow: hidden;
}
.evaluate_img_box image{
  width: 29.2%;
  margin: 2%;
  float: left;
}
.evaluate image{
  width: 20px;
  height: 20px;
  float: left;
  border-radius: 10px;
}
.evaluate_right{
  float: left;
  margin-left: 4%;
}