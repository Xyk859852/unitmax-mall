<!--index.wxml-->
<!-- 搜索 -->
<navigator id="search_box" url="../search/search">
 <view id="search">搜索</view> 
</navigator>
<view>
<!-- 顶部轮播图 -->
  <swiper indicator-dots="{{indicatorDots}}" circular="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}"  wx:key="this">
    <view wx:if="{{item.AD_IMG!=''}}">
        <swiper-item>
          <image src="http://192.168.31.227:8080/static/uploadImgs/advert/{{item.AD_IMG}}" class="slide-image"  mode="widthFix"></image>
        </swiper-item>
    </view>
    </block>
  </swiper>
</view>
<!-- 公告 -->
<view id='notice_box'>
  <image src='../../images/notice.png'></image>
  <scroll-view id='scrolltxt_box' style='width:{{scrolltxt_box_width}}px'>
    <view class="scrolltxt">
      <view class="marquee_box">
        <view class="marquee_text" style="transform: translateX(-{{marqueeDistance}}px)">
          <text>{{text}}</text>
          <text style="margin-right:{{marquee_margin}}px;"></text>
          <text style="margin-right:{{marquee_margin}}px;">{{text}}</text>        
        </view>
      </view>
    </view>
  </scroll-view>
</view>
<!-- 分类 -->
 <view id='category_box'>
  <view class='category_box' wx:for="{{varClass}}"  wx:key="this">
    <image src='http://localhost:8080/static/uploadImgs/goodstype/{{item.PATH}}' style='height:{{category_img_width}}px'></image>
    <view>{{item.NAME}}</view>
  </view>
</view> 
