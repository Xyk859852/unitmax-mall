 @import "../bottom/bottom.wxss"; 
 .notice_popup{
   width: 100%;
   height: 100%;
   background-color: rgba(0,0,0,0.7);
   position: fixed;
   z-index: 2;
 }
 .notice{
   width: 80%;
   height: 200px;
   position: fixed;
   top: 50%;
   margin-top: -150px;
   left: 10%;
   background-color: #ffffff;
   border-radius: 5px;
   overflow: hidden;
 }
 .notice_popup image{
   width: 40px;
   height: 40px;
   position: fixed;
   top: 50%;
   margin-top: 80px;
   left: 50%;
   margin-left: -20px;
 }
 .notice_title{
   background-color: #ff6692;
   color: #ffffff;
   text-align: center;
   line-height: 30px;
   font-size: 16px;
 }
 .notice_content{
   padding: 20px;
   font-size: 14px;
   height: 130px;
 }
 .notice_content view{
   height: 130px;
   line-height: 20px;
   overflow-y: auto;
 }
/**home.wxss**/
.slide-image{
  width:100%;
  max-height: 300px;
}
#search_box{
  position:fixed;
  top:0;
  left: 0;
  width:100%;
  background-color:rgba(255,255,255,0.3);
  padding:10rpx 0;
  z-index:1;
}
#search{
  text-align: center;
  width:90%;
  background-color:rgba(255,255,255,1);
  margin: 0 auto;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  line-height: 40rpx;
  height: 50rpx;
  font-size: 30rpx;
  color: #ccc;
}
#notice_box{
  padding: 10rpx 4%;
  background-color: #fff8e9;
  height: 60rpx;
  overflow: hidden;
}
#notice_box image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  float: left;
}
#scrolltxt_box{
  height: 40rpx;
  float: left;
  margin-left: 4%;
  margin-top: 10rpx;
}
.marquee_box {
  position:relative;
  color:#333;
  height:40rpx;
  display:block;
  overflow:hidden;
} 
.marquee_text {
  white-space: nowrap;
  position:absolute;
  top:0;
  font-size:14px;
  height:90rpx;
  line-height:40rpx;
}
.classify_box{
  width: 92%;
  background-color: #ffffff;
  padding: 20px 4%;
  overflow: hidden;
  margin-top: 10px;
}
.classify_left{
  width: 48%;
  height: 200px;
  float: left;
}
.classify_right{
  width: 48%;
  margin-left: 4%;
  height: 95px;
  float: left;
}
#category_box{
  width: 92%;
  padding: 4%;
  background-color: #ffffff;
  overflow: hidden;
  margin-top: 10px;
}
.category_box{
  width: 15.8%;
  float: left;
  padding: 2%;
}
.category_box image{
  width: 100%;
}
.category_box view{
  width: 100%;
  font-size: 12px;
  text-align: center;
  color: #333;
}
.category_name{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all
}
#category_commodity_title image{
  width: 100%;
}
#category_commodity_list{
  width: 96%;
  padding: 2%;
  overflow: hidden;
  background-color: #ffffff;
}
.category_commodity_container{
  float:left;
  margin:2%;
  border:#ddd 1px solid;
  padding-bottom:5px;
  border-radius:5px;
}
.category_commodity_container > image{
  width: 100%;
}
.category_commodity_container_title{
  width: 100%;
  font-size: 14px;
  color: #333;
  padding: 0 2%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all
}
.category_commodity_container_price{
  overflow: hidden;
  padding: 0 2%;
}
.category_commodity_container_price view{
  font-size: 12px;
  color: #ff6692;
  /* width: 60%; */
  /* float: left; */
  margin-top: 5px;
  text-align: center;
}
.category_commodity_container_price image{
  width: 20px;
  height: 20px;
  float: right;
}
#new_box{
  width: 96%;
  overflow: hidden;
  padding-left: 4%;
  background-color: #ffffff;
  margin-top: 10px;
  height: 60px;
}
#new_box_img{
  width: 40px;
  height: 40px;
  float: left;
  margin-top: 10px;
}
.new_box_img{
  width: 40px;
  height: 40px;
}
.swiper_container {
  height:60px;
  line-height:20px;
  float: left;
  margin-left: 4%;
}
.swiper_item {
  font-size: 14px;
  position: relative;
}
.swiper_item .view1{
  float: left;
  height: 30px;
}
.swiper_item .view1 view{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.news_navigator_img{
  width:60px;
  height: 60px;
  float: right;
}
.news_navigator_view{
  display: block;
  width: 60px;
  height: 60px;
  background:linear-gradient(to right, rgba(255,255,255,1), rgba(255,255,255,0));
  position: absolute;
  right: 0;
  top: 0; 
}
