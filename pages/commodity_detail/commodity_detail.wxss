/**commodity_detail.wxss**/
page{
  padding-bottom: 60px;
}
.slide-image{
  width:100%;
  max-height: 300px;
}
.commodity_detail_title{
  background-color: #ffffff;
  padding: 10px 4%;
  border: #f5f5f5 1px solid;
  overflow: hidden;
}
.commodity_detail_title_left{
  float: left;
}
.commodity_detail_title_right{
  width: 30px;
  float: left;
  margin-left: 4%;
}
.commodity_detail_title_right image{
  width: 30px;
  height: 30px;
}
.commodity_detail_title_right view{
  color: #cccccc;
  text-align: center;
  font-size: 12px;
}
.commodity_title{
  font-size: 16px;
}
.commodity_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:10px;
}
.commodity_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}
.body{
  margin-top: 10px;
}
.nav{width:100%;height:40px;line-height:40px;display:flex;flex-direction:row;background-color: #ffffff;}
.default{
  line-height:40px;text-align:center;flex:1;border-right:1px solid #f5f5f5;color:#000;font-size:14px;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-right:1px solid #f5f5f5;font-size:14px;border-bottom:1px solid #ff6692;
  }
.show{display:block;font-size:0;}
.hidden{display:none;}
.detail_img{width: 100%;}
.specification_box{
  background-color: #ffffff;
  padding: 20px 4%;
}
.specification{
  overflow: hidden;
}
.specification_left{
  float: left;
  width: 30%;
  color: #aaaaaa;
  line-height: 30px;
  font-size: 14px;
}
.specification_right{
  float: left;
  width: 70%;
  color: #aaaaaa;
  line-height: 30px;
  font-size: 14px;
}
.evaluate{
  background-color: #ffffff;
  padding: 10px 4%;
  border-bottom: #f5f5f5 1px solid;
}
.evaluate_nickname{
  font-size: 14px;
  color: #aaaaaa;
}
.evaluate_container{
  font-size: 16px;
  margin-top: 5px;
}
.evaluate_img_box{
  overflow: hidden;
}
.evaluate_img_box image{
  width: 29.2%;
  margin: 2%;
  float: left;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 60px;
  overflow: hidden;
  width: 100%;

}
.shopping_cart{
  background-color: #ffffff;
  width: 20%;
  float: left;
  height: 59px;
  border-top: #f5f5f5 1px solid;
}
.shopping_cart image{
  width: 20px;
  height: 20px;
  display: block;
  margin: 0 auto;
  margin-top: 10px; 
}
.shopping_cart view{
  font-size: 14px;
  text-align: center;
  margin-top: 5px;
}
.buy{
  width:40%;
  float: left;
  line-height: 60px;
  color: #ffffff;
  text-align: center;
  background-color: #fea900;
  font-size: 18px;
}
.add_cart{
  width:40%;
  float: left;
  line-height: 60px;
  background-color: #fe6500;
  color: #ffffff;
  text-align: center;
  font-size: 18px;
}