/**commodity_detail.wxss**/
page{
  padding-bottom: 60px;
}
.slide-image{
  width:100%;
}
.commodity_detail_title{
  background-color: #ffffff;
  padding: 10px 4%;
  border: #f5f5f5 1px solid;
  overflow: hidden;
}
.commodity_detail_title_left{
  float: left;
}
.commodity_detail_title_right{
  width: 30px;
  float: left;
  padding: 0;
  margin: 0 0 0 4%;
  line-height: 16px;
  background-color: #ffffff;
}
.commodity_detail_title_right image{
  width: 30px;
  height: 30px;
}
.commodity_detail_title_right view{
  color: #cccccc;
  text-align: center;
  font-size: 12px;
}
.commodity_title{
  font-size: 16px;
}
.commodity_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:10px;
}
.commodity_tip{
  font-size: 12px;
  color: #aaaaaa;
  margin-top: 5px;
}
.commodity_tip text{
  float: right;
}
.body{
  margin-top: 10px;
}
.nav{width:92%;height:40px;line-height:40px;display:flex;flex-direction:row;background-color: #ffffff;}
.default{
  line-height:40px;text-align:center;flex:1;border-right:1px solid #f5f5f5;color:#000;font-size:14px;border-bottom:1px solid #f5f5f5;
}
.red{color:#ff6692;
  line-height:40px;text-align:center;flex:1;border-right:1px solid #f5f5f5;font-size:14px;border-bottom:1px solid #ff6692;
  }
.show{display:block;font-size:0;}
.hidden{display:none;}
.detail_img{width: 100%;display: block;}
.specification_box{
  background-color: #ffffff;
  padding: 10px 4%;
}
.specification{
  overflow: hidden;
}
.specification_left{
  /* float: left;
  width: 30%; */
  color: #aaaaaa;
  line-height: 30px;
  font-size: 14px;
}
.specification_right{
  float: left;
  width: 70%;
  color: #aaaaaa;
  line-height: 30px;
  font-size: 14px;
}
.evaluate{
  background-color: #ffffff;
  padding: 10px 4%;
  border-bottom: #f5f5f5 1px solid;
  overflow: hidden;
}
.evaluate_nickname{
  font-size: 14px;
  color: #aaaaaa;
}
.evaluate_nickname text{
  float: right;
  font-size: 12px;
  margin-top: 2px;
}
.evaluate_container{
  font-size: 16px;
  margin-top: 5px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all
}
.evaluate_img_box{
  overflow: hidden;
}
.evaluate_img_box image{
  width: 29.2%;
  margin: 2%;
  float: left;
}
.evaluate image{
  width: 30px;
  height: 30px;
  float: left;
  border-radius: 15px;
}
.evaluate_right{
  float: left;
  margin-left: 4%;
}
.evaluate_more{
  background-color: #ffffff;
  font-size: 12px;
  text-align: center;
  line-height: 30px;
}
.no_evaluate{
  font-size: 14px;
  text-align: center;
  padding: 10px 0;
  background-color: #ffffff;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 60px;
  overflow: hidden;
  width: 100%;

}
.shopping_cart{
  background-color: #ffffff;
  width: 16%;
  float: left;
  height: 59px;
  border-top: #f5f5f5 1px solid;
  position: relative;
}
.shopping_cart image{
  width: 20px;
  height: 20px;
  display: block;
  margin: 0 auto;
  margin-top: 10px; 
}
.shopping_cart view{
  font-size: 12px;
  text-align: center;
  margin-top: 5px;
}
.number{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 3px;
  top: -2px;
  background-color: #fe6500;
  color: #ffffff;
  text-align: center;
  line-height: 20px;
  font-size: 10px!important;
  border-radius: 10px;
}
.buy{
  width:26%;
  float: left;
  line-height: 60px;
  color: #ffffff;
  text-align: center;
  background-color: #fea900;
  font-size: 16px;
  border-radius: 0px;
}
.add_cart{
  width:26%;
  float: left;
  line-height: 60px;
  background-color: #fe6500;
  color: #ffffff;
  text-align: center;
  font-size: 16px;
}