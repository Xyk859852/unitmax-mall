<!--commodity_detail.wxml-->
<!-- 顶部轮播图 -->
  <swiper indicator-dots="{{indicatorDots}}" circular="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{good.zsImgList}}" wx:key="unique">
      <swiper-item>
        <image src="{{appIP}}{{item.path}}" class="slide-image"  mode="widthFix"/>
      </swiper-item>
    </block>
  </swiper>
<view class='commodity_detail_title'>
  <view class='commodity_detail_title_left' style='width:{{commodity_detail_title_left_width}}px;'>
    <view class='commodity_title'>{{good.GOODS_NAME}}</view>
    <view class='commodity_price'>￥{{good.GOODS_PRICE}}</view>
    <view class='commodity_tip'>库存：{{good.GOODS_INVENTORY}} 销量：{{good.GOODS_SALENUM}}</view>
  </view>
  <!-- <view class='commodity_detail_title_right'> 
    <image src='../../images/share.png'></image>
    <view>分享</view>
  </view> -->
</view>
  <view class="nav" style='margin-top:10px;border-bottom:1px solid #f5f5f5;padding:0 4%;'>
    <view>商品评价</view>
  </view>
     <view class='evaluate'>
      <image src='../../images/notice.png'/>
      <view class='evaluate_right' style='width:{{evaluate_right_width}}px;'>
        <view class='evaluate_nickname'>哈哈哈哈哈<text>2015-05-16</text></view>
        <view class='evaluate_container'>很好</view>
      </view>
    </view> 
    <navigator class='evaluate_more' open-type="navigate" url="../evaluate/evaluate">更多评价</navigator>
  <view class="nav" style='margin-top:10px;border-bottom:1px solid #f5f5f5;padding:0 4%;'>
    <view>规格参数</view>
  </view>
<view class='specification_box'>
      <view class='specification'>
        <text class='specification_left'>{{good.SPECIFICATION}}</text> 
      </view>
    </view>
  <view class="nav" style='margin-top:10px;border-bottom:1px solid #f5f5f5;padding:0 4%;'>
    <view>商品详情</view>
  </view>
    <image wx:for="{{good.xqImgList}}" wx:key="unique" class='detail_img' src='{{appIP}}{{item.path}}' mode="widthFix"></image>
<view class='footer'>
  <view class='shopping_cart'>
    <view class='number'>1</view>
    <image src='../../images/shopping_cart.png'/>
    <view>购物车</view>
  </view>
  <navigator url="../place_order/place_order?goods_id={{good.GOODS_ID}}" class='buy'>立即购买</navigator>
  <view class='add_cart'>加入购物车</view>
</view>