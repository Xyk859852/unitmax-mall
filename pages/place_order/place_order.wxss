/* pages/place_order/place_order.wxss */
.show{
  z-index: 99;
}
.delivery_box,.payment_box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  font-size: 14px;
}
.delivery_title,.payment_title{
  text-align: center;
}
.delivery_content,.payment_content{
  padding: 0 4%;
}
.delivery_select,.delivery_title,.payment_select,.payment_title{
  border-bottom: #f5f5f5 1px solid;
  line-height: 40px;
}
.body{
  padding-bottom: 70px;
}
.address_box{
  width: 100%;
  padding: 20px 0;
  background-color: #ffffff;
  overflow: hidden;
  position: relative;
}
.address_left,.address_right{
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  margin-top: -10px;
}
.address_left{
  left:4%;
}
.address_right{
  right:4%;
}
.address label{
  float: right;
}
.address{
  float: left;
  font-size: 14px;
}
.address_detail{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all
}
.address_border{
  height: 3px;
}
.other image{
  width: 20px;
  height: 20px;
  margin-right: 4%;
  vertical-align: middle;
}
.commodity_list{
    margin-top: 10px;
}
.commodity_li{
    width: 92%;
      overflow: hidden;
}
.commodity_list{
  margin-top: 10px;
}
.commodity_li{
  width: 92%;
  overflow: hidden;
  height: 80px;
  padding:10px 4%;
  background-color: #fafafa;
  border-bottom: #ffffff solid 2px;
}
.commodity_li image{
  width: 80px;
  height: 80px;
  float: left;
}
.commodity_li_right{
  height: 80px;
  float: left;
  margin-left: 4%;
  border-bottom: 1px solid #f5f5f5;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:10px;
  height: 27px;
  line-height: 27px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}
.num_box{
  float: right;
  overflow: hidden;
}
.smallbtn{
  width: 25px;
  height: 25px;
  text-align: center;
  line-height: 25px;
  border: #f5f5f5 1px solid;
  float: left;
}
.other{
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
  font-size: 14px;
  padding:10px 4%;
  width: 92%;
}
.other_right,.other_input{
  float: right;
}
.other switch{
  margin-top: -7px;
}
.section{
   background:#ffffff;
  padding:10px 4%;
  font-size: 14px;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 60px;
  background-color: #ffffff;
  overflow: hidden;
  width: 100%;
  z-index: 10;
  line-height: 60px;
}
.footer .all{
  color: #fe6500;
  float: right;
  margin-right: 4%;
  font-size: 14px;
}
.buy{
  width:40%;
  float: right;
  line-height: 60px;
  color: #ffffff;
  text-align: center;
  background-color: #fe6500;
  font-size: 18px;
}