/**category.wxss**/  
page{
  /* height: 100%; */
  background-color:#ffffff;
  padding-top: 42px;
}
#search_box{
   position:fixed;
  top:0;
  left: 0; 
  width:92%;
  background-color:rgba(255,255,255,1);
  padding:5px 4% 7px 4%;
  z-index:1;
}
#search{
  text-align: center;
  width:92%;
  background-color:#f5f5f5;
  margin: 0 auto;
  border-radius: 5px;
  padding: 5px 4%;
  line-height: 20px;
  height: 20px;
  font-size: 14px;
  color: #aaaaaa;
}
.category_box{
  /* height: 100%; */
  overflow: hidden;
}
.category_left{
  width: 30%;
  height: 100%;
  float: left;
  overflow-y: auto;
  border-right: #cccccc 
}
.category_left view{
  text-align: center;
  line-height: 40px;
  font-size: 16px;
  border-bottom: #cccccc solid 1px;
  border-left: #f5f5f5 solid 2px;
  border-right: #f5f5f5 solid 2px;
}
.on{
  border-left: #ff6692 2px solid!important;
  border-right: #ffffff solid 2px!important;
  background-color: #ffffff;
}
.category_right{
   /* width: 70%;  */
  width: 100%;
  /* height: 100%; */
  float: left;
  background-color: #ffffff;
  overflow-y: auto;
}
.category_container{
  overflow: hidden;
  width: 100%;
   /* padding: 20px 0;  */
}
.category{
  float: left;
  /* padding: 2%; */
  border-bottom:1px #f5f5f5 solid;
  border-right:1px #f5f5f5 solid;
}
/* .category image{
  width: 100%;
} */
 .category image{
  width: 70%;
  display: block;
  margin:0 auto;
  margin-top: 10px;
} 
.category view{
  height: 40px;
  width: 100%;
  font-size: 14px;
  text-align: center;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-top: 10px;
}