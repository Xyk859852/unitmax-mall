/* pages/evaluate_management/evaluate_management.wxss */
.evaluate_list{
  padding: 10px 4%;
  background-color: #ffffff;
  margin-top: 10px;
}
.nickname image{
  width: 30px;
  height: 30px;
  vertical-align: middle;
  border-radius: 15px;
}
.nickname label{
  font-size: 14px;
  margin-left: 4%;
}
.evaluate_content{
  font-size: 14px;
  padding: 10px 0;
}
.commodity_li{
  width: 92%;
  overflow: hidden;
  padding:10px 4%;
  background-color: #f5f5f5;
}
.commodity_li image{
  width: 60px;
  height: 60px;
  float: left;
}
.commodity_li_right{
  float: left;
  margin-left: 4%;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 16px;
  margin-top:10px;
  height: 27px;
  line-height: 27px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #cccccc;
  margin-top: 5px;
}