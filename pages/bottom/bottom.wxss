page{
  padding-bottom: 52px;
}
#category1_box{
  width: 100%;
  overflow: hidden;
  position:fixed;
  bottom:0;
  left:0;
  border-top: 1px #f5f5f5 solid;
  z-index: 99
}
.category1_box{
  width: 25%;
  float: left;
  background-color: #ffffff;
  padding: 8px 0;
  margin: 0;
  line-height: 12px;
  border-radius: 0;
  height: 52px;
}
.category1_box image{
  width: 20px;
  height: 20px;
  margin: 0 auto;
  display: block;
}
.category1_box view{
  width: 100%;
  font-size: 12px;
  text-align: center;
  color: #666;
  margin-top: 5px;
}
