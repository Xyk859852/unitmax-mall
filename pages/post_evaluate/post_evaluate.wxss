/* pages/post_evaluate/post_evaluate.wxss */
page{
  padding-bottom: 50px;
}
.evaluate_list{
  margin-bottom: 10px;
}
.evaluate_box{
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
  overflow: hidden;
  padding: 10px 4%;
}
.commodity_img{
  width: 40px;
  height: 40px;
  float: left;
}
.evaluate_title{
  float: left;
  overflow: hidden;
}
.evaluate{
  width: 33.33%;
  float: left;
  text-align: center;
  padding: 5px 0;
}
.evaluate image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.evaluate label{
  font-size: 14px;
  line-height: 20px;
  margin-left: 5px;
}
.evaluate_content{
  width: 92%;
  background-color: #ffffff;
  height: 100px;
  padding: 10px 4%;
  font-size: 14px;
  line-height: 20px;
}
.red{
    color:#ea4e37;
}
.red{
  color:#ea4e37;
}
.yellow{
  color:#f3c513;
}
.grey{
  color: #a8b6b6;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 92%;
  z-index: 10;
  padding: 10px 4%;
}
.footer button{
  width: 100%;
  line-height: 40px;
  background-color: #fe6500;
  text-align: center;
  border-radius: 5px;
  color: #ffffff;
}