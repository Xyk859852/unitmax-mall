<!--pages/after_service_2/after_service_2.wxml-->
<view class='commodity_li'>
  <image src='../../images/address.png'></image>
  <view class='commodity_li_right' style='width:{{commodity_li_right_width}}px;'>
    <view class='commodity_li_title'>商品名称商品名称商品名称商品名称商品名称商品名称</view>
    <view class='commodity_li_tip'>品类：品类 等级：等级</view>
  </view>
</view>
<view class='other' bindtap='showpayment'>
  <label>退款原因</label>
  <image class='other_right_img' src='../../images/right.png' />
  <label class='other_right'>余额支付</label>
</view>
<view class='other'>
  <label>退款金额</label>
  <input class='other_input_price' style='width:{{other_input_width}}px;' value='￥16.00' placeholder='请输入留言内容' />
</view>
<view class='price_tip'>最多￥16.00</view>
<view class='other'>
  <label>退款说明</label>
  <input class='other_input' style='width:{{other_input_width}}px;' value='{{MSG}}' placeholder='请输入留言内容' />
</view>
<view class='other'>
  <view>上传凭证</view>
  <view class='image_box'>
    <image style='height:{{image_box_width}}px;' class="{{image1?'show1':'hide'}}" src='{{image1_src}}'>
      <image class='del' bindtap='delimage1' src='../../images/right.png'></image>
    </image>
    <image style='height:{{image_box_width}}px;' class="{{image2?'show1':'hide'}}" src='{{image2_src}}'>
      <image class='del' bindtap='delimage2' src='../../images/right.png'></image>
    </image>
    <image style='height:{{image_box_width}}px;' class="{{image3?'show1':'hide'}}" src='{{image3_src}}'>
      <image class='del' bindtap='delimage3' src='../../images/right.png'></image>
    </image>
    <image style='height:{{image_box_width}}px;' class="{{addimage?'show1':'hide'}}" bindtap='chooseImage' src='../../images/address.png' />
  </view>
</view>
<view class='footer'>
  <button form-type='submit'>提交</button>
</view>