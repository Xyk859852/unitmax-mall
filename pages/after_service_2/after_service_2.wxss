/* pages/after_service_2/after_service_2.wxss */
page{
  padding-bottom: 60px;
}
.commodity_li{
  width: 92%;
  overflow: hidden;
  padding:10px 4%;
  background-color: #ffffff;
}
.commodity_li image{
  width: 80px;
  height: 80px;
  float: left;
}
.commodity_li_right{
  float: left;
  margin-left: 4%;
}
.commodity_li_title{
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 14px;
  margin-top:5px;
  height: 27px;
  line-height: 27px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #aaaaaa;
  margin-top: 2px;
}
.num_box{
  float: right;
  overflow: hidden;
  color: #666;
  font-weight: bold;
}
.after_service{
  margin-top: 10px;
}
.address_box{
  width: 100%;
  padding: 10px 0;
  background-color: #ffffff;
  overflow: hidden;
  position: relative;
  border-bottom: 1px solid #f5f5f5;
}
.address_left,.address_right{
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  margin-top: -10px;
}
.address_left{
  left:4%;
}
.address_right{
  right:4%;
}
.address{
  float: left;
  font-size: 14px;
}
.address_detail{
  font-size: 12px;
  color: #cccccc;
}
.other{
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
  font-size: 14px;
  padding:10px 4%;
  width: 92%;
  line-height: 1.4rem;
  /* margin-top: 10px; */
}
.other_right,.other_input{
  float: right;
}
.other_right_img{
  float: right;
  width: 1.4rem;
  height: 1.4rem;
  margin-left:5px;
}
.other_input_price{
  float: right;
  color: #fe6500;
}
.price_tip{
  padding:10px 4% 0 4%;
  font-size:12px;
  color:#aaaaaa;
}
.image_box{
  margin-top: 10px;
}
.image_box > image{
 width: 32%;
 margin-left: 1%;
 position: relative;
}
.del{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 0;
  right: 0;
}
.footer{
  /* position: fixed;
  bottom: 0; */
   left: 0; 
  overflow: hidden;
  width: 92%;
  z-index: 10;
  padding: 10px 4%;
  margin-top: 20px;
}
.footer button{
  width: 100%;
  line-height: 40px;
  background-color: #fe6500;
  text-align: center;
  border-radius: 5px;
  color: #ffffff;
}