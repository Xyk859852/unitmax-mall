/* pages/after_service_management/after_service_management.wxss */
.other image{
  width: 20px;
  height: 20px;
  margin-right: 4%;
  vertical-align: middle;
}
.other{
  background-color: #ffffff;
  border-bottom: #f5f5f5 1px solid;
  font-size: 14px;
  padding:10px 4%;
  width: 92%;
}
.order_no{
  font-size: 14px;
  color: #666666;
}
.order_state{
  float: right;
  color: #fe6500;
}
.commodity_list{
  margin-top: 10px;
}
.commodity_li{
  width: 92%;
  overflow: hidden;
  height: 80px;
  padding:10px 4%;
  background-color: #fafafa;
  border-bottom: #ffffff solid 2px;
}
.commodity_li image{
  width: 80px;
  height: 80px;
  float: left;
}
.commodity_li_right{
  height: 80px;
  float: left;
  margin-left: 4%;
  border-bottom: 1px solid #f5f5f5;
}
.commodity_li_title{
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.commodity_li_price{
  color: #ff6692;
  font-size: 14px;
  margin-top:5px;
  height: 27px;
  line-height: 27px;
}
.commodity_li_tip{
  font-size: 12px;
  color: #aaaaaa;
  margin-top: 2px;
}
.num_box{
  float: right;
  overflow: hidden;
  color: #666;
  font-weight: bold;
}
 .order_total_money{
  padding: 7px 0 7px 4%;
  background-color: #ffffff;
  /* text-align: right; */
  font-size: 14px;
  color: #fe6500;
  line-height: 30px;
  overflow: hidden;
} 
